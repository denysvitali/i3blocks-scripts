#!/bin/bash
DEFAULT_SINK=$(pacmd info |grep "Default sink" | cut -d ':' -f 2 | grep -Po '\S+')
VOLUME=$(pactl list | grep -i -A 10 -m 1 "$DEFAULT_SINK" | grep -m 1 'Volume:' | grep -m 1 -Po '\d+?%' | head -n 1 | grep -Po '\d+')

if [ $VOLUME -eq 0 ]; then
  echo "ðŸ”‡";
  exit 0;
fi

SYMBOL="ðŸ”ˆ";

if [[ $VOLUME -gt 50 ]]; then
  SYMBOL="ðŸ”‰";
fi

if [[ $VOLUME -gt 75 ]]; then
  SYMBOL="ðŸ”Š";
fi

echo "$SYMBOL  $VOLUME%"

